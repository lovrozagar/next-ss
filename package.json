{
  "name": "glide-ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "next build",
    "check-format": "prettier --check .",
    "check-lint": "eslint ./src",
    "check-types": "tsc --pretty --noEmit",
    "classname-remove-white-space": "node ./scripts/classname-remove-white-space.js",
    "coverage": "jest --coverage",
    "dev": "next dev",
    "format": "prettier --write .",
    "preinstall": "npx only-allow bun",
    "lint": "next lint",
    "prepare": "husky install",
    "start": "next start",
    "test": "jest",
    "test-all": "bun run check-format && bun run check-lint && bun run check-types && bun run test"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,html,css}": "prettier --write"
  },
  "dependencies": {
    "@next/eslint-plugin-next": "^14.0.1",
    "next": "14.0.1",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@trivago/prettier-plugin-sort-imports": "^4.2.1",
    "@types/jest": "^29.5.7",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "autoprefixer": "^10.0.1",
    "debug": "^4.3.4",
    "eslint": "^8.52.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-fsecond": "^1.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-lodash": "^7.4.0",
    "eslint-plugin-no-relative-import-paths": "^1.5.3",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "eslint-plugin-react-server-components": "^1.1.1",
    "eslint-plugin-sonar": "^0.12.0",
    "eslint-plugin-unicorn": "^49.0.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.0.2",
    "only-allow": "^1.2.1",
    "postcss": "^8",
    "prettier": "^3.0.3",
    "prettier-plugin-css-order": "^2.0.1",
    "prettier-plugin-packagejson": "^2.4.6",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "tailwindcss": "^3.3.0",
    "ts-node": "latest",
    "typescript": "^5"
  }
}
